                            </av:LayoutAnchorable>
                    </av:LayoutAnchorablePane>
                    <av:LayoutAnchorablePane>
                        <av:LayoutAnchorable>
                            <dcm:DicomPanelView Margin="6 2 2 2" Grid.Column="1" Grid.Row="0" Model="{Binding Path=DataContext.SagittalPanelModel,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:MainWindow}}"/>
                        </av:LayoutAnchorable>
