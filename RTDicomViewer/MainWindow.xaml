                        </av:LayoutAnchorable>
                    </av:LayoutAnchorablePane>
                </av:LayoutPanel>
            </av:LayoutRoot>
        </av:DockingManager>-->

        <Grid DockPanel.Dock="Top" Background="#333333">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <GridSplitter Grid.Column="1" Width="5" Background="#444444" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Stretch"/>

            <TabControl Grid.Column="0" Grid.Row="1">
                <TabItem Header="Image">
                    
                </TabItem>
                <TabItem Header="Structures">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <Expander Header="POIs" ScrollViewer.VerticalScrollBarVisibility="Visible" IsExpanded="True">
                                <mv:POIObjectDisplayView/>
                            </Expander>
                            <Expander Header="Structure sets" ScrollViewer.VerticalScrollBarVisibility="Visible" IsExpanded="True">
                                <mv:ROIObjectDisplayView/>
                            </Expander>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Plan">
                    <StackPanel>
                        <GroupBox Header="Beam">
                            <StackPanel>
                                <ComboBox>
                                </ComboBox>
                                <Expander Header="Beam Parameters" IsExpanded="True">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">Modality:</TextBlock>
                                        <ComboBox Grid.Row="0" Grid.Column="1" SelectedItem="Photons">Photons</ComboBox>

                                        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">Energy:</TextBlock>
                                        <ComboBox Grid.Row="1" Grid.Column="1" SelectedItem="6 MV">6 MV
                                        </ComboBox>

                                        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center">Name:</TextBlock>
                                        <TextBox Grid.Row="2" Grid.Column="1"></TextBox>
                                    </Grid>
                                </Expander>
                                <Expander Header="Geometry" IsExpanded="True">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">Gantry (degrees):</TextBlock>
                                        <TextBox Grid.Row="0" Grid.Column="1"></TextBox>

                                        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">Collim. (degrees):</TextBlock>
                                        <TextBox Grid.Row="1" Grid.Column="1" ></TextBox>

                                        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center">X1 (mm):</TextBlock>
                                        <TextBox Grid.Row="2" Grid.Column="1"></TextBox>

                                        <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center">X2 (mm):
                                        </TextBlock>
                                        <TextBox Grid.Row="3" Grid.Column="1"></TextBox>

                                        <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center">Y1 (mm):
                                        </TextBlock>
                                        <TextBox Grid.Row="4" Grid.Column="1"></TextBox>

                                        <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center">Y2 (mm):
                                        </TextBlock>
                                        <TextBox Grid.Row="5" Grid.Column="1"></TextBox>

                                    </Grid>
                                </Expander>
                                <Expander Header="Weighting" IsExpanded="True"></Expander>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="Prescription">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">Type:</TextBlock>
                                <ComboBox Grid.Row="0" Grid.Column="1"></ComboBox>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">Isodose (%):</TextBlock>
                                <TextBox Grid.Row="1" Grid.Column="1"></TextBox>

                                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center">Dose (Gy):</TextBlock>
                                <TextBox Grid.Row="2" Grid.Column="1"></TextBox>


                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Dose">
                    <StackPanel>
                        <Expander Header="Dose Grids" IsExpanded="True">
                            <mv:DoseObjectDisplayView/>
                        </Expander>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Analyse">
                    <StackPanel>
                        <GroupBox Header="Normalisation">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">Isodose (%):</TextBlock>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding NormalisationIsodose}"></TextBox>

                                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">Render Quality:</TextBlock>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding RenderQuality}"></TextBox>
                                
                                
                                <Button Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Width="70" Height="20" Margin="3" Command="{Binding ApplyNormalisationCommand}">Apply</Button>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </TabItem>

            </TabControl>

            <Grid Grid.Column="2" Grid.Row="1">
                
                <cc:TileControl Margin="5 0 0 0">
                    <cc:TileControl.TopLeft>
                        <cc:TilerControlItem>
                            <dcm:DicomPanelView Model="{Binding DataContext.AxialPanelModel, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}, Mode=FindAncestor}}"/>
                        </cc:TilerControlItem>
                    </cc:TileControl.TopLeft>
                    
                    <cc:TileControl.TopRight>
                        <cc:TilerControlItem>
                            <dcm:DicomPanelView Model="{Binding DataContext.CoronalPanelModel, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}, Mode=FindAncestor}}"/>
                        </cc:TilerControlItem>
                    </cc:TileControl.TopRight>

                    <cc:TileControl.BottomLeft>
                        <cc:TilerControlItem>
                            <dcm:DicomPanelView Model="{Binding DataContext.SagittalPanelModel, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}, Mode=FindAncestor}}"/>
                        </cc:TilerControlItem>
                    </cc:TileControl.BottomLeft>

                    <cc:TileControl.BottomRight>
                        <cc:TilerControlItem>
                            <Border Background="Black"/>
                        </cc:TilerControlItem>
                    </cc:TileControl.BottomRight>

                </cc:TileControl>

            </Grid>

        </Grid>
    </DockPanel>
</Window>
